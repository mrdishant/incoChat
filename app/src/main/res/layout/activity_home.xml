<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/wallpaper"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.incochat.incochat1.Activities.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="50"
            android:text="ic"
            android:textColor="@android:color/white"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/india"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="50"
            android:text="Made with ❤ in India"
            android:textAlignment="viewEnd"
            android:textColor="@android:color/white" />

        <ImageView
            android:layout_width="32dp"
            android:src="@drawable/sync"
            android:visibility="gone"
            android:id="@+id/sync"
            android:layout_marginTop="7dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:layout_height="32dp" />

    </LinearLayout>



        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:id="@+id/viewpager"
            android:layout_marginTop="40dp"
            android:layout_height="match_parent"/>



    <devlight.io.library.ntb.NavigationTabBar
        android:id="@+id/ntb"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:ntb_animation_duration="400"
        app:ntb_active_color="@color/colorPrimaryDark"
        app:ntb_inactive_color="@android:color/black"
        app:ntb_titled="true"
        app:ntb_title_mode="all"
        app:ntb_swiped="true"
        app:ntb_bg_color="@android:color/transparent"/>


</android.support.design.widget.CoordinatorLayout>
