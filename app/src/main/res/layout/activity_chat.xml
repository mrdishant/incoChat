<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatbkg"
    tools:context="com.incochat.incochat.Activities.ChatActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/backarrow" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileimage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:civ_border_width="1dp"
                app:civ_border_color="@android:color/white"
                android:layout_gravity="center"
                android:src="@drawable/profile"
                android:translationZ="5dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_weight="45"
                >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="20"
                    android:layout_weight="45"
                    android:text="Name"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/anonimityTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="20"
                    android:layout_weight="45"
                    android:text="Message Anonymously"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    />


            </LinearLayout>


            <ImageView
                android:layout_width="32dp"
                android:layout_gravity="center|right"
                android:id="@+id/delete"
                android:visibility="gone"
                android:layout_marginRight="20dp"
                android:src="@drawable/delete"
                android:layout_height="32dp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center|right"
                android:text="Off"
                android:id="@+id/anonimity"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:drawableTop="@drawable/off"
                android:layout_height="wrap_content" />


        </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/messages"
        android:layout_width="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_height="match_parent"
        android:layout_marginTop="58dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">


        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="70"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/emoji"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="10"
                    android:src="@drawable/smile" />


                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/message"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="80"
                    android:hint="Type a message"
                    app:met_hideUnderline="true" />


                <ImageView
                    android:id="@+id/camera"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_weight="10"
                    android:src="@drawable/camera" />


            </LinearLayout>

        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:id="@+id/sendmessage"
            android:background="@drawable/sendback">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:src="@drawable/send" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
